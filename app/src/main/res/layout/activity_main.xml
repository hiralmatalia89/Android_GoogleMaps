<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/bb">

    <TextView
        android:id="@+id/headingLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Directions to MSU!"
        android:textColor="@color/teal_200"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/headingLbl"
        android:text="This App directs you to Google Maps to get the route to the Montclair State University! Click on the below button! "
        android:textColor="@color/white"
        android:textSize="20sp" />

    <Button
        android:id="@+id/navigateBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="Drive to MSU"/>
</RelativeLayout>